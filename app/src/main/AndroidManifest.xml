<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biswanath.handlerandlooper">

    <application
        android:allowBackup="true"
        android:name=".lifecycle.LifecycleApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".binderexample.BinderExmActivity">
        </activity>
        <activity android:name=".handlerexample.RxTestActivity" />
        <activity android:name=".handlerexample.CustomHandlerActivity" />
        <activity android:name=".handlerexample.CustomLooperExpActivity" />
        <activity android:name=".handlerexample.HandlerExpActivity" />
        <activity android:name=".handlerexample.ThreadExpActivity" />
        <activity android:name=".handlerexample.MainActivity" />

        <service android:name=".binderexample.ExampleService" />


        <!-- lifecycle-->
        <activity android:name=".lifecycle.LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lifecycle.CActivity" />
        <activity android:name=".lifecycle.BActivity" />
        <activity android:name=".lifecycle.AActivity" />

    </application>

</manifest>